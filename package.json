{
  "name": "live-print-client",
  "version": "0.0.0",
  "main": "electron/main.js",
  "type": "module",
  "author": "Dimitrios Chondrokoukis",
  "description": "This is the client app for the Live Print System",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "electron:build": "ng build --base-href ./ && electron-builder --config electron-builder.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/cdk": "^19.2.8",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/material": "^19.2.8",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "@electron/remote": "^2.1.2",
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.8.0",
    "angularx-qrcode": "^19.0.0",
    "canvas": "^3.1.0",
    "concurrently": "^9.1.2",
    "electron-store": "^10.0.1",
    "ngx-file-drag-drop": "^11.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "wait-on": "^8.0.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@types/jasmine": "~5.1.7",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "node-abi": "^4.2.0",
    "typescript": "~5.8.3"
  }
}
