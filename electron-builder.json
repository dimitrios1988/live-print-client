{
  "appId": "gr.segas.liveprintclient",
  "productName": "Live Print Client",
  "files": ["dist/", "electron/"],
  "directories": {
    "output": "dist/electron-build"
  },
  "win": {
    "target": "portable",
    "icon": "src/assets/icons/icon.ico",
    "signtoolOptions": {
      "signingHashAlgorithms": ["sha256"],
      "sign": false
    }
  },
  "mac": {
    "target": "dmg",
    "icon": "src/assets/icons/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "src/assets/icons"
  }
}
